{
    "$schema": "https://zeabur.com/schemas/zeabur-json-schema.json",
    "build": {
        "type": "dockerfile",
        "dockerfile": "Dockerfile"
    },
    "ports": [
        8000
    ],
    "env": {
        "DATABASE_URL": {
            "description": "MySQL 数据库连接字符串",
            "required": true
        },
        "SECRET_KEY": {
            "description": "JWT 密钥",
            "required": false
        },
        "NOTEBOOKLM_AUTH": {
            "description": "NotebookLM 认证文件内容 (base64 编码)",
            "required": false
        }
    }
}
